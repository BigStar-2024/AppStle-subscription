    <!--
        Added the entity PaymentPlanActivity.
    -->
    <changeSet id="20210624073453-1" author="jhipster">
        <createTable tableName="payment_plan_activity">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="shop" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="charge_activated" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="activation_date" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="recurring_charge_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="last_email_sent_to_merchant" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="number_of_email_sent_to_merchant" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="base_plan" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="additional_details" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="trial_days" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="price" type="double">
                <constraints nullable="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="plan_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="billing_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="based_on" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="features" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="test_charge" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="billed_date" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="valid_charge" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="trial_ends_on" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="shop_frozen" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="payment_plan_event" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="plan_info_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="payment_plan_activity" columnName="activation_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="payment_plan_activity" columnName="last_email_sent_to_merchant" columnDataType="datetime"/>
        <dropDefaultValue tableName="payment_plan_activity" columnName="billed_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="payment_plan_activity" columnName="trial_ends_on" columnDataType="datetime"/>
    </changeSet>

