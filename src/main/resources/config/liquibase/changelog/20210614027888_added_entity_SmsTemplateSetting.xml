    <changeSet id="20210614027888-1" author="jhipster">
        <createTable tableName="sms_template_setting">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="shop" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="sms_setting_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="send_sms_disabled" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="sms_content" type="${clobType}">
                <constraints nullable="false" />
            </column>
            <column name="stop_reply_sms" type="boolean">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
