        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity EmailTemplateSetting.
    -->
    <changeSet id="20210301225828-1" author="jhipster">
        <createTable tableName="email_template_setting">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="shop" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="email_setting_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="send_email_disabled" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="subject" type="${clobType}">
                <constraints nullable="false" />
            </column>
            <column name="from_email" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="logo" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="heading" type="${clobType}">
                <constraints nullable="false" />
            </column>
            <column name="heading_text_color" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="content_text_color" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="content_link_color" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="content" type="${clobType}">
                <constraints nullable="false" />
            </column>
            <column name="footer_text_color" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="footer_link_color" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="footer_text" type="${clobType}">
                <constraints nullable="false" />
            </column>
            <column name="template_background_color" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

