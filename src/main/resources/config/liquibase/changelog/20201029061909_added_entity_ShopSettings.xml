<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity ShopSettings.
    -->
    <changeSet id="20201029061909-1" author="jhipster">
        <createTable tableName="shop_settings">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="shop" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="tagging_enabled" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="delay_tagging" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="delayed_tagging_value" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="delayed_tagging_unit" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="order_status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="payment_status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="fulfillment_status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
    </changeSet>

