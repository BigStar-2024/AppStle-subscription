        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity BundleSetting.
    -->
    <changeSet id="20220728131224-1" author="jhipster">
        <createTable tableName="bundle_setting">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="show_on_product_page" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="show_multiple_on_product_page" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="action_button_color" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="action_button_font_color" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="product_title_color" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="product_price_color" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="redirect_to" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="show_product_price" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="one_time_discount" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="show_discount_in_cart" type="boolean">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

