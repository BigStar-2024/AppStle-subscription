    <!--
        Added the entity BundleRule.
    -->
    <changeSet id="20220728100552-1" author="jhipster">
        <createTable tableName="bundle_rule">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="shop" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="price_summary" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="action_button_text" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="action_button_description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="show_bundle_widget" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="customer_include_tags" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="start_date" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="end_date" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="discount_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="discount_value" type="double">
                <constraints nullable="true" />
            </column>
            <column name="bundle_level" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="products" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="variants" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="discount_condition" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="bundle_rule" columnName="start_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="bundle_rule" columnName="end_date" columnDataType="datetime"/>
    </changeSet>

