        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity ActivityUpdatesSettings.
    -->
    <changeSet id="20190613141208-1" author="jhipster">
        <createTable tableName="activity_updates_settings">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="shop" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="summary_report_enabled" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="summary_report_frequency" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="summary_report_deliver_to_email" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="summary_report_time_period" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="summary_report_last_sent" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="summary_report_processing" type="boolean">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="activity_updates_settings" columnName="summary_report_last_sent" columnDataType="datetime"/>
